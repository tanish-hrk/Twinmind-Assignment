# Environment Configuration
NODE_ENV=development
PORT=8080

# GCP Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twinmind
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=false

# Firestore
FIRESTORE_EMULATOR_HOST=localhost:8081

# Cloud Storage
STORAGE_BUCKET=twinmind-data

# Pub/Sub
PUBSUB_TOPIC_CONTEXT_CAPTURED=context-captured
PUBSUB_TOPIC_INSIGHT_REQUESTED=insight-requested

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=7d

# API Keys (stored in Secret Manager in production)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_SPEECH_API_KEY=your-google-speech-api-key

# CORS
ALLOWED_ORIGINS=chrome-extension://your-extension-id,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
